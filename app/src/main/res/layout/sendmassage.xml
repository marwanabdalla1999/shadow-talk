<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="10dp"
    android:background="@drawable/sendmassage"
    android:padding="50dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="10/20/2020"
            android:textColor="#ABB3B3B3"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/massagelayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/photolayout"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginStart="305dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/photo"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="0dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:text="00:00"
                    android:textColor="#DDB3B3B3"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"

                    android:layout_weight="0.1"
                    android:background="@drawable/sendmassage"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:transitionName="preview_image" />

                <ImageView
                    android:id="@+id/seen3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="start|right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/circle_white"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_baseline_done_all_24"
                    tools:ignore="VectorDrawableCompat" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/audiolayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.18"
                android:background="@drawable/voicebackground"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0"
                            android:background="@drawable/timerbackground"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="3dp"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="-:-"
                                android:textColor="#8FFFFFFF"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="/"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/recordtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="3dp"
                                android:layout_marginEnd="3dp"
                                android:layout_marginRight="3dp"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:text="-:-"
                                android:textColor="#8FFFFFFF"
                                android:textSize="10sp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:visibility="visible">

                            <SeekBar
                                android:id="@+id/seekBar"
                                android:layout_width="250dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:rotation="180" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="0"
                            android:background="#03000000"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginStart="0dp"
                                android:layout_weight="0"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingTop="0dp"
                                android:paddingRight="10dp"
                                android:paddingBottom="0dp"
                                android:text="00:00"
                                android:textColor="#DDFFFFFF"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/seen2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="left|end"
                                android:layout_weight="0"
                                android:visibility="invisible"
                                app:srcCompat="@drawable/ic_baseline_done_all_24"
                                tools:ignore="VectorDrawableCompat" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/playpausebackground"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/loading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="false"
                            android:layout_alignParentTop="false"
                            android:layout_alignParentEnd="false"
                            android:layout_alignParentBottom="false"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="0dp"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/pause"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_baseline_pause_24"
                            tools:ignore="VectorDrawableCompat" />

                        <ImageView
                            android:id="@+id/play"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:rotation="180"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_baseline_play_arrow_24"
                            tools:ignore="VectorDrawableCompat" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mymassagelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.18"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/sendmassage"
                    android:orientation="vertical"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/mymassage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="start"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:text="hi"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="0dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/time3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="0dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="0dp"
                            android:text="00:00"
                            android:textColor="#DDB3B3B3"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/seen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="start|right"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/ic_baseline_done_all_24"
                            tools:ignore="VectorDrawableCompat" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/myphoto"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_account_circle_24"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>